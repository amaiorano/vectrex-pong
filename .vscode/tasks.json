{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make (Linux)",
            "type": "shell",
            "command": "make",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            // Use ubuntu-gcc6809 docker image to make
            "label": "make (Docker)",
            "type": "shell",
            "command": "docker run -v ${workspaceFolder}:/root/${workspaceFolderBasename} -t -i amaiorano/gcc6809 make -C ${workspaceFolderBasename}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "clear": true
            }
        },
        {
            "label": "launch in vectrexy",
            "type": "shell",
            "dependsOn": "make (Docker)",
            "command": "${workspaceFolder}/../../vectrexy/build/RelWithDebInfo/vectrexy.exe ${workspaceFolderBasename}.bin",
            "problemMatcher": []
        },
        {
            // This version launches a separate console window, which can be used for debugging
            "label": "launch in vectrexy (Windows)",
            "type": "process",
            "dependsOn": "make (Docker)",
            "command": [
                "cmd.exe"
            ],
            "args": [
                "/c",
                "start",
                "c:\\code\\vectrexy\\build\\RelWithDebInfo\\vectrexy.exe",
                "c:\\code\\vectrex-dev\\vectrex-pong\\pong.vec"
            ],
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": []
        }
    ]
}